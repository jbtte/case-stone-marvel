<div class="container">
  <div class="row">

    <div class=" character-search col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: characters_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :character, 'Search for a Character of Marvel Universe'%>
            <%= text_field_tag :character, nil, placeholder: 'Captain America', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>

    <div class="comic-serach col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: comics_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :comics, 'Search for a Comic Book'%>
            <%= text_field_tag :comic, nil, placeholder: 'Adventures of Captain America', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-danger btn-block' %>
        <% end %>
      </div>
    </div>

  </div>
</div>
