<div class="show show-character" >
  <div class="container mt-4 ">
    <div class="top my-4">
      <div class="favorite-form">
        <% if @favorite.empty? %>
          <%= form_for(@favorite_new, remote: true) do |f| %>
          <%= hidden_field_tag "name", @character['name'] %>
          <%= hidden_field_tag "number", @character['id'] %>
          <%= hidden_field_tag "url", @character["thumbnail"]["path"] %>
          <%= hidden_field_tag "character", true %>
          <%= f.submit %>
        <% end %>
        <% else %>
          <%= link_to "Unfollow",
          favorite_path(@favorite[0]),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
      <h1 class="text-center text-white m-5"><%= @character['name']%></h1>
    </div>
    <div class="char-info d-flex flex-fill">
      <div class="photo mx-auto">
        <img class="avatar-bio" src="<%= @character["thumbnail"]["path"] %>.jpg" alt="">
      </div>
      <% unless @character["description"].empty? %>
        <div class="bio d-flex px-5">
          <div class="card text-white align-self-center px-4 py-3 rounded">
            <p class="card-text text-center">
              <%= @character["description"] %>
            </p>
          </div>
        </div>
      <% end %>

    </div>
    <hr>
    <div class="comic-books mt-4">
      <h3 class="text-white text-center">Comic books</h3>
      <ul class="mr-5 mb-5">
        <% @character['comics']['items'].each do |book| %>
        <li>
          <%= link_to book['name'], comic_path(book['resourceURI'].split('/')[-1]) %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
