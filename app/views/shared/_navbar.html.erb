<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="profile nav-item dropdown">
    <%= image_tag ("ironman.png"), class: "avatar-navbar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <% if user_signed_in? %>
    <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
      <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </div>
    <% end %>
  </div>
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag ("my_marvel.png") %>
    <% end %>
  <div class="collapse navbar-collapse " id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to "Favorites", favorites_path, class: "nav-link text-white" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
